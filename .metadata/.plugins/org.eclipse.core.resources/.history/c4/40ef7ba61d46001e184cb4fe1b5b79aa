        //변수에 이름과 나이와 자신의 성적 (double)로 넣기.
        
        String name = "신재헌";
        int age = 30;
        double score = 84.5;
        char grade = 'B';
        
        System.out.println("안녕하세요. 저의 이름은 " + name + "이고, 나이는" + age + "입니다.");
        System.out.println("저의 성적은 " + score + "이고, 등급은 " + grade + "입니다.");
        
        
        System.out.println("이름 :" + name);

        
		
		
		
		
		
		
	}

}
